.side_bar
  .side_bar__header
    .side_bar__header__box
      .side_bar__header__box__name
        = current_user.name
      .side_bar__header__box__icon
        =link_to new_group_path do
          =icon('far', 'edit')
        =link_to edit_user_path(current_user) do
          =icon('fas', 'cog')
  .side_bar__groups
    -current_user.groups.each do |group|
      .side_bar__groups__box
        = link_to '#' do
          .side_bar__groups__box__name
            = group.name
          .side_bar__groups__box__message
            グループメッセージ
    
    
    
    
    
    
    
